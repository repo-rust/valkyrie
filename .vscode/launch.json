    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'valkyrie'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=valkyrie",
                    "--package=valkyrie",
                ],
                "filter": {
                    "name": "valkyrie",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "SHARDS": "4"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'valkyrie'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=valkyrie",
                    "--package=valkyrie"
                ],
                "filter": {
                    "name": "valkyrie",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "SHARDS": "2"
            }
        }
    ]
}